<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/selecioneTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecione sua jogada"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/jogadasCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/selecioneTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/pedra"
            android:id="@+id/PedraBtn"
            android:layout_gravity="center"
            android:onClick="buttonClicked"
            />

        <ImageView
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/papel"
            android:id="@+id/PapelBtn"
            android:layout_gravity="center"
            android:onClick="buttonClicked"
            />

        <ImageView
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/tesoura"
            android:id="@+id/TesouraBtn"
            android:layout_gravity="center"
            android:onClick="buttonClicked"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Jogar"
        android:enabled="false"
        android:id="@+id/jogarBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogadasCl"/>
    <TextView
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/jogadaUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogarBtn"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/jogadaJogador1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogadaUsuario"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/jogadaJogador2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogadaJogador1"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/resultadoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogadaJogador2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>